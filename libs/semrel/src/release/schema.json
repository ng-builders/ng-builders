{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Deploy",
  "description": "Deploy",
  "type": "object",
  "properties": {
    "npm": {
      "type": "object",
      "properties": {
        "pkgRoot": {
          "type": "string"
        }
      }
    },
    "dryRun": {
      "type": "boolean",
      "default": false
    },
    "publishable": {
      "type": "boolean",
      "default": true
    },
    "gitlab": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "properties": {
            "gitlabUrl": {
              "type": "string",
              "description": "The GitLab endpoint"
            },
            "gitlabApiPathPrefix": {
              "type": "string",
              "description": "The GitLab API prefix"
            },
            "assets": {
              "type": "array",
              "description": "An array of files to upload to the release",
              "items": {
                "type": "object",
                "properties": {
                  "path": {
                    "type": "string",
                    "description": "A glob to identify the files to upload"
                  },
                  "label": {
                    "type": "string",
                    "description": "Short description of the file displayed on the GitLab release. Ignored if path matches more than one file"
                  }
                },
                "required": ["path"]
              }
            }
          }
        }
      ]
    }
  },
  "additionalProperties": false
}
